{
  "name": "mocha",
  "version": "3.0.1",
  "author": "vitorsalgado",
  "license": "MIT",
  "homepage": "https://github.com/vitorsalgado/mocha#readme",
  "scripts": {
    "prepare": "husky install",
    "format": "prettier \"./**\" --write --ignore-unknown"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.0.1",
    "@commitlint/config-conventional": "^17.0.0",
    "husky": "^8.0.0",
    "lint-staged": "^13.0.3",
    "prettier": "^2.7.1"
  },
  "standard-version": {
    "types": [
      {
        "type": "feat",
        "section": "Features"
      },
      {
        "type": "fix",
        "section": "Bug Fixes"
      },
      {
        "type": "chore",
        "section": "Chore",
        "hidden": false
      },
      {
        "type": "docs",
        "section": "Docs",
        "hidden": false
      },
      {
        "type": "style",
        "section": "Refactor",
        "hidden": false
      },
      {
        "type": "refactor",
        "section": "Refactor",
        "hidden": false
      },
      {
        "type": "perf",
        "section": "Perf",
        "hidden": false
      },
      {
        "type": "test",
        "section": "Refactor",
        "hidden": false
      },
      {
        "type": "build",
        "section": "Build",
        "hidden": false
      }
    ]
  }
}
